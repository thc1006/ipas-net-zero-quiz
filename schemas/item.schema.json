{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "item_id",
    "stem",
    "credential",
    "source"
  ],
  "properties": {
    "item_id": {
      "type": "string"
    },
    "year": {
      "type": [
        "integer",
        "null"
      ]
    },
    "year_confidence": {
      "type": "string",
      "enum": [
        "high",
        "medium",
        "low"
      ]
    },
    "credential": {
      "type": "string"
    },
    "level": {
      "type": [
        "string",
        "null"
      ]
    },
    "topic_tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "question_type": {
      "type": "string"
    },
    "stem": {
      "type": "string"
    },
    "options": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "key",
          "text"
        ],
        "properties": {
          "key": {
            "type": "string"
          },
          "text": {
            "type": "string"
          }
        }
      }
    },
    "answer": {
      "type": [
        "string",
        "null"
      ]
    },
    "explanation": {
      "type": [
        "string",
        "null"
      ]
    },
    "source": {
      "type": "object",
      "required": [
        "url"
      ],
      "properties": {
        "source_id": {
          "type": [
            "string",
            "null"
          ]
        },
        "url": {
          "type": "string"
        },
        "publisher": {
          "type": [
            "string",
            "null"
          ]
        },
        "authority": {
          "type": [
            "string",
            "null"
          ]
        },
        "evidence": {
          "type": "object",
          "properties": {
            "page": {
              "type": [
                "integer",
                "null"
              ]
            },
            "quote": {
              "type": [
                "string",
                "null"
              ],
              "maxLength": 25
            }
          }
        }
      }
    },
    "alt_sources": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "evidence_quote": {
      "type": [
        "string",
        "null"
      ],
      "maxLength": 25
    },
    "notes": {
      "type": "string"
    }
  }
}