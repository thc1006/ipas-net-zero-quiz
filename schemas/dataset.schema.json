{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "meta",
    "sources",
    "items"
  ],
  "properties": {
    "meta": {
      "type": "object"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "source_id",
          "title",
          "url"
        ],
        "properties": {
          "source_id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "publisher": {
            "type": [
              "string",
              "null"
            ]
          },
          "authority": {
            "type": [
              "string",
              "null"
            ]
          },
          "published_date": {
            "type": [
              "string",
              "null"
            ]
          },
          "accessed_at": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    },
    "items": {
      "type": "array",
      "items": {
        "$ref": "item.schema.json"
      }
    }
  }
}